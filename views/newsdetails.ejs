<!DOCTYPE html>
<html>
<head>
    <% include partials/head.ejs%>
</head>
<body>

<% include partials/header2.ejs %>
<div class="main-blog-single">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="content-wrap">
                    <article class="post">
                        <div class="featured-post">
                            <div class="meta-post meta-post-shared ">
                                <h2><%= data[0].title %></h2>
                                <ul>
                                    <li class="active"><%= moment(data[0].createdOn).format("DD MMMM YYYY");%></li>
                                </ul>
                            </div>
                            <% if(data[0].video){%>
                                <video style="width: 100%; height: 85vh" controls>
                                    <source src="/image/news/<%= data[0].video %>" type="video/mp4">
                                </video>
                            <%} else {%>
                                <div class="post-img">
                                    <img src="/image/news/<%= data[0].image %>" alt="image">
                                </div>
                            <%} %>
                        </div>
                        <div class="content-post" style="padding-top: 30px">
                            <div class="padding darkbluehover dots">
                                <%- data[0].content_text %>
                            </div>
                        </div>
                    </article>
                </div>
            </div>

        </div>
    </div>
</div>

<% include partials/footer.ejs %>

<div id="scroll-top">â–²</div>
<% include partials/footerscripts.ejs %>
</body>
</html>
