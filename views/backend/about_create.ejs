<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head.ejs%>
    <script src="https://cdn.ckeditor.com/4.14.0/full/ckeditor.js"></script>
</head>
<body>

<% include ../partials/header2.ejs %>
<div class="main-blog-single" style="padding-top: 50px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-12">
                <% include sidebar.ejs %>
            </div>

            <div class="col-lg-10 col-md-10 col-sm-12">
                <h1>Create</h1>
                <a href="/admin/about" class="download hvr-shutter-out-verticall contactbtn" style="line-height: 45px">List</a>

                <form  class="comment-form"
                       action="/admin/about/create"
                       method="post"
                >
                    <p class="comment-form-input">
                        <label>Title</label>
                        <input  name="title" type="text" placeholder="Title" required="required">
                    </p>
                    <p class="comment-form-input">
                        <label>Language</label>
                        <select name="lang">
                            <option value="en">en</option>
                            <option value="de">de</option>
                        </select>
                    </p>
                    <div class="clearfix"></div>
                    <p class="comment-form-input">
                        <label>Content Text</label>
                        <textarea  name="content_text" placeholder="Content Text" required="required"></textarea>
                        <script>
                            CKEDITOR.replace( 'content_text' );
                        </script>
                    </p>
                    <p class="submit-form">
                        <button name="submit" type="submit"  class="submit hvr-shutter-out-verticall" >Submit</button>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>

<div id="scroll-top"><i class="fa fa-angle-up"></i></div>
<% include ../partials/footerscripts.ejs %>

</body>
</html>
